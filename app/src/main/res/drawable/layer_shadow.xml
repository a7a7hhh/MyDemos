<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/bg">
        <!--30dp 透明-->
        <shape>
            <solid android:color="@color/background_white" />
        </shape>
    </item>
    <!--下偏移100dp-->
    <item
        android:id="@+id/bg1"
        android:top="100dp">
        <shape >


            <gradient android:startColor="#ffffff"
                android:centerColor="@color/subject_color"
                android:endColor="#ffffff"/>
        </shape>

    </item>
    <item
        android:id="@+id/bg2"
        android:top="200dp">
        <shape >


            <gradient android:startColor="#ffffff"
                android:endColor="@color/subject_color"
                android:angle="90"/>
        </shape>

    </item>

</layer-list>