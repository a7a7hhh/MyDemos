<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/bg">
        <!--30dp 透明-->
        <shape>
            <solid android:color="@color/background_white" />
        </shape>
    </item>
    <!--下偏移100dp-->
    <item
        android:id="@+id/bg1"
        android:top="100dp"
        android:bottom="5dp"
        android:width="5dp">
        <shape >


            <gradient android:startColor="#ff6900"
                android:endColor="@color/background_white"
                android:angle="180"/>/>
        </shape>

    </item>
    <item
        android:id="@+id/bg2"
        android:top="100dp"
        android:left="5dp">
        <shape >
            <solid android:color="@color/background_white"/>
        </shape>

    </item>
    <item
        android:id="@+id/bg3"
        android:top="100dp"
        android:width="5dp"
        android:bottom="5dp"
        android:gravity="right">
        <shape >
            <gradient android:startColor="#ff6900"
                android:endColor="@color/background_white"/>
        </shape>

    </item>

    <item
        android:id="@+id/bg4"
        android:height="5dp"
        android:left="5dp"
        android:right="5dp"
        android:gravity="bottom">
        <shape >
            <gradient android:startColor="#ff6900"
                android:endColor="@color/background_white"
                android:angle="270"/>

        </shape>

    </item>

</layer-list>