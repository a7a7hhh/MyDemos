<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--基本样式-->
    <style name="EditBase">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/font_primary</item>
        <item name="android:textColorHint">@color/font_hint</item>
        <item name="android:background">@null</item>
    </style>
    <!--多行输入框-->
    <style name="EditBase.TextArea">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">10</item>
        <item name="android:gravity">top|left</item>
        <item name="android:ellipsize">end</item>
    </style>
    <!--多行输入框-->
    <style name="EditBase.TextArea.Padding">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">10</item>
        <item name="android:gravity">top|left</item>
        <item name="android:ellipsize">end</item>
    </style>
    <!--单行输入框-->
    <style name="EditBase.Single">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">top|left</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">@dimen/spacing_tiny</item>
        <item name="android:textColorHint">@color/font_hint</item>
    </style>

    <!--单行输入框普通字号-->
    <style name="EditBase.Single.FontNormal">
        <item name="android:textColor">@color/font_primary</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="EditBase.Single.FontNormal.Phone">
        <item name="android:drawablePadding">@dimen/spacing_normal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:hint">手机号</item>
        <item name="android:inputType">phone</item>
        <item name="android:maxLength">11</item>
    </style>

    <!--密码输入框样式-->
    <style name="EditBase.Single.FontNormal.Password">
        <item name="android:drawablePadding">@dimen/spacing_normal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:hint">密码</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:maxLength">16</item>
    </style>

    <!--验证码输入框样式-->
    <style name="EditBase.Single.FontNormal.VeryCode">
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">@dimen/spacing_normal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:hint">验证码</item>
        <item name="android:maxLength">6</item>
    </style>

    <!--姓名输入框样式-->
    <style name="EditBase.Single.FontNormal.Name">
        <item name="android:drawablePadding">@dimen/spacing_normal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:hint">请输入名称</item>
        <item name="android:maxLength">32</item>
    </style>

</resources>